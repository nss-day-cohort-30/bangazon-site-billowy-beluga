@model Bangazon.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCompleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCompleted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentType.Description)
        </dd>
    </dl>
    <h3>Products:</h3>
    @foreach (var orderProduct in Model.OrderProducts)
    {

        <a asp-controller="Products" asp-action="Details" asp-route-id="@orderProduct.Product.ProductId">
            @orderProduct.Product.Title
        </a>
        <form>
            <input type="radio" id="@orderProduct.Product.ProductId-1" />
            <input type="radio" id="@orderProduct.Product.ProductId-2"/>
            <input type="radio" id="@orderProduct.Product.ProductId-3" />
            <input type="radio" id="@orderProduct.Product.ProductId-4"/>
            <input type="radio" id="@orderProduct.Product.ProductId-5" />
            <button type="submit">Submit</button>
        </form>
        <br />
    }
</div>
<div>
    <a href='javascript:history.go(-1)'>Back</a>
</div>
