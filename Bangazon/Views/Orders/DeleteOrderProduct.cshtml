@model Bangazon.Models.OrderProduct

@{
    ViewData["Title"] = "DeleteOrderProduct";
}

<h6>Are you sure you want to remove this product from your cart?</h6>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
    </dl>
    
    <form asp-action="DeleteOrderProduct">
        <input type="hidden" asp-for="OrderProductId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Cart</a>
    </form>
</div>
