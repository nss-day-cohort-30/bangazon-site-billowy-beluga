@model Bangazon.Models.ProductType

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Label</h1>

<div>
    <h4>ProductType</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Label)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Label)
        </dd>
    </dl>
</div>
    <ul>
@foreach (var product in ViewBag.productList)
{

<li>
    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductId">@product.Title</a>
</li>

}
    </ul>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductTypeId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
